{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "typeRoots": ["./src/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "src/types/*.d.ts"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
